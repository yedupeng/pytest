    "configurations": [
        
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "args": [
                "-sv",
                "--disable-pytest-warnings",
                "--html=report.html"
